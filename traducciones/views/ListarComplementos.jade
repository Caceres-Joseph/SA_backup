  body(data-spy='scroll', data-target='.scrollspy')
    // Fixed navbar
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='') Traducciones Grupo2
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='IngresarComplemento') Ingresar Complemento
            li
              a(href='ListarComplementos') Listar Complemento
            li
              a(href='ListarUsuarios') Listar Usuarios
            li
              a(href='login') Cerrar Sesion
    .container
      br
      br
      br
      h1.mt-4 Listar Complementos
      form
        ul.nav.nav-tabs
          li.nav-item
            a.nav-link.active(data-toggle='tab', href='#home') Mis Complementos
          li.nav-item
            a.nav-link(data-toggle='tab', href='#profile') Listado General de Complementos
        #myTabContent.tab-content
          #home.tab-pane.fade.show.active 
            table.table
              thead
                tr
                  th(scope='col') Nombre de complemento
                  th(scope='col') Id complemento
                  th(scope='col') Lenguaje original
                  th(scope='col') Acciones
              tbody
              each complemento, index in complementos
                tr
                  th(scope='row') #{complemento.nombre}
                  td  
                    input(name='idComplementoEliminar', value='#{complemento.idComplemento}', readonly='')
                  td #{complemento.localizacionOriginal}
                  td 
                    button.btn.btn-primary(type='submit') Eliminar
          #profile.tab-pane.fade
            table.table
              thead
                tr
                  th(scope='col') Nombre de complemento
                  th(scope='col') Id complemento
                  th(scope='col') Lenguaje original
                  th(scope='col') Acciones
              tbody
              each complemento, index in complementos
                tr
                  th(scope='row') #{complemento.nombre}
                  td  
                    input(name='idComplementoEliminar', value='#{complemento.idComplemento}', readonly='')
                  td #{complemento.localizacionOriginal}
                  td 
                    a(href='/VerCadenas/#{complemento.idComplemento}/#{complemento.nombre}')
                      input(type='button', value='Ver Cadena')

